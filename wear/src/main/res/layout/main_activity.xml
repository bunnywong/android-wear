<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRelativeLayout"
    android:background="@drawable/background_dice">

    <TextView
        android:id="@+id/textHomeTitle"
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:textAlignment="viewEnd"
        android:width="150dp"
        android:gravity="center"
        android:onClick="pageSetting"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textMenuRecord"
        android:text="RECORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#F08080"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:textAlignment="viewEnd"
        android:width="150dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="pageRecord"  />

    <TextView
        android:id="@+id/textMenuSetting"
        android:text="SETTING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="#F08080"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:textAlignment="viewEnd"
        android:width="150dp"
        android:gravity="center"
        android:onClick="pageSetting"
        android:layout_below="@+id/textMenuRecord"
        android:layout_alignStart="@+id/textMenuRecord"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textVersion"
        android:text="version 0.1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@null"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:textAlignment="viewEnd"
        android:width="150dp"
        android:gravity="center"
        android:onClick="pageSetting"
        android:layout_below="@+id/textMenuSetting"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>


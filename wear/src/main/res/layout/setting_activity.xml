<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/settingRelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_setting">

    <ImageButton
        android:id="@+id/btSettingHome"
        android:src="@drawable/home_selector"
        android:background="@null"
        tools:context=".VoiceRecognitionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="pageMain"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DEL RECORD"
        android:id="@+id/textSettingDel"
        android:background="#339900"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:textAlignment="viewEnd"
        android:width="150dp"
        android:gravity="center"
        android:onClick="recordClear"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textSettingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Setting"
        android:background="@null"
        android:capitalize="characters"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:clickable="false"
        android:width="150dp"
        android:onClick="pageSetting"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/btSettingHome"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btSettingHome" />

</RelativeLayout>

